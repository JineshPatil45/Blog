<%- include('partials/header') %>

<main>
    <h1>Edit Post</h1>

    <form action="/post/<%= post.id %>/edit" method="POST">
        <div class="form-group">
            <label for="title" class="form-label">Title</label>
            <input type="text" id="title" name="title" class="form-control" value="<%= post.title %>" required>
        </div>
        <div class="form-group">
            <label for="author" class="form-label">Author</label>
            <input type="text" id="author" name="author" class="form-control" value="<%= post.author %>" required>
        </div>
        <div class="form-group">
            <label for="content" class="form-label">Content</label>
            <textarea id="content" name="content" class="form-control" required><%= post.content %></textarea>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="/post/<%= post.id %>" class="btn">Cancel</a>
        </div>
    </form>
</main>

<%- include('partials/footer') %>